user { "iaas":
  ensure     => "present",
  managehome => true,
  groups     => [ "sudo" ],
  password   => "!", # locked, no password
}

ssh_authorized_key { "iaas-on-iaas":
  ensure => "present",
  type   => "ssh-rsa",
  key    => "",
  user   => "iaas",
}

exec { "allow nopasswd for sudo group":
  command => "echo '%sudo ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/iaas",
  creates => "/etc/sudoers.d/iaas",
  path => [ "/bin", "/usr/bin" ],
}

