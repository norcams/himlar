; Forward zone for <%= @zone %>
$ORIGIN <%= @zone %>.
$TTL    3600
@  IN	SOA	ns.<%= @zone %>.    root.<%= @zone %>. (
                        2017110201         ; Serial
                              3600         ; Refresh
                              1800         ; Retry
                            604800         ; Expire
                            43200 )        ; Negative Cache TTL

<% @name_servers.each do |ns| -%>
        IN      NS      <%= ns %>.
<% end -%>

ns  	  IN	  A		<%= @ns1_public_addr %>
